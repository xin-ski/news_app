<!-- app/views/keyword/index.html.erb -->
<h1>キーワードアンケート</h1>
<%= link_to "TOP", root_path %><br>
<h4>気になるキーワードを選択してください</h4>
<%= form_tag(keyword_save_survey_path, method: :post) do %>
  <table>
    <tr>
      <% KeywordController::KEYWORDS.each_with_index do |keyword, index| %>
        <td>
          <label>
            <%= check_box_tag("keywords[]", keyword) %>
            <%= keyword %>
          </label>
        </td>
        <% if (index + 1) % 5 == 0 %>
          </tr><tr> <!-- 5個ごとに新しい行を開始 -->
        <% end %>
      <% end %>
    </tr>
  </table>
  <h5>※少しでも気になるものがあればチェックを入れてください<br>
  　数が少ないとニュースが表示されない場合があります<h5>

  <%= submit_tag("送信") %>
<% end %>

